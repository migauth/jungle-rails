<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %> for: <%= @order.email %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <div>Total: $<%= @order.total_cents / 100.0 %></div>
    <hr>
    <h2>Products in this order:</h2>
    <% @order.line_items.each do |line_item| %>
      <h3><%= line_item.product.name %></h3>
      <%= image_tag line_item.product.image.url , class: "img-thumbnail" %>
      <p><%= line_item.product.description %></p>
      <p><%= line_item.quantity %> ordered for $<%= line_item.total_price_cents / 100.0 %></p>
    <% end %>

  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
