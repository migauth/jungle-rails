<!-- app/views/orders/_line_item.html.erb -->

<div class="line-item">
  <h3><%= line_item.product.name %></h3>
  <%= image_tag line_item.product.image.url, class: 'img-thumbnail' %>
  <p><%= line_item.product.description %></p>
  <p><%= line_item.quantity %> ordered for $<%= line_item.total_price_cents / 100.0 %></p>
</div>
